<div class="cantainer">
  <div class="row">
    <div class="col-10">
      <div class="wrapper d-flex">
        <div class="image">
          <p><%= image_tag @item.image, size: "200x200" %></p>
        </div>
        <div class="states">
          <table>
            <tr>
              <th>
                <p>商品名</p>
                <p><%= @item.name %></p>
              </th>
            </tr>
            <tr>
              <th>
                <p>商品説明</p>
                <p><%= @item.introduction %></p>
              </th>
            </tr>
            <tr>
              <th>
                <p>税込価格</p>
                <p><%= @item.price %></p>
              </th>
            </tr>
            <tr>
              <th>
                <p>販売ステータス</p>
                <p>
                  <% if @item.is_active == true %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </p>
              </th>
            </tr>
          </table>
        </div>
      </div>
      <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>