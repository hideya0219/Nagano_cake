<div class="container">
  <div class="row">
    <div class="col">
      <h4><span class="bg-secondary">商品新規登録</span></h4>
      <table>
       <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜き価格</th>
         <th>ステータス</th>
       </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td>
              <% if item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>