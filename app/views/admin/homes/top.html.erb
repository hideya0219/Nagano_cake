<div class="container">
  <div class="row">
    <div class="col">
      <h4><span class="bg-secondary">注文履歴一覧</span></h4>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.name %></td>
            <td><%= order.quantity %></td>
            <td><%= order.order_status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>