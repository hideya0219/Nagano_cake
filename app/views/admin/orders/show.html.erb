<div class="container">
  <div class="row">
    <div class="col">
      <h4><span class="bg-secondary">注文履歴詳細</span></h4>
      <table class="table">
        <tr>
          <th>購入者</th>
          <th><%= @order.name %></th>
        </tr>
        <tr>
          <th>注文日</th>
          <th><%= @order.created_at %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @order.addless %></th>
        </tr>
        <tr>
          <th>支払い方法</th>
          <th><%= @order.payment_method %></th>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <th><%= @order.status %></th>
        </tr>
      </table>
    </div>
  </div>
</div>